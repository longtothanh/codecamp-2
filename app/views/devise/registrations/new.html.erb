<div class="registration-container">
  <div class="container">
    <h1 class="text-center registration-title">Đăng ký để tạo tài khoản</h1>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <%= form_with(model: @user, url: registration_path(:user), local: true, html: { class: "registration-form" }) do |f| %>
          <div class="form-group">
            <%= f.label :email, nil, class: "form-label" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :name, nil, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, nil, class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, nil, class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>

          <%= f.submit "Sign Up", class: "btn btn-lg btn-submit" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
